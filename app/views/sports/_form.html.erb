<%= simple_form_for @sport, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Sport</legend>

    <%= f.input :name %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', sports_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
