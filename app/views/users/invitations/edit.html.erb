<%= simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :class => 'form-horizontal', :method => :put }) do |f| %>
  <fieldset>
    <legend>Set your password</legend>
    
    <p><%= resource.invited_by.email %> has invited you to join their Sift Pro account. Simply create a password below to get started.</p>

    <%= f.input :invitation_token, as: :hidden %>
    <%= f.input :email, :required => true, :autofocus => true, :value => :email %>
    <%= f.input :password, :required => true, %>
    <%= f.input :password_confirmation, :required => true, %>

    <div class="form-actions">
      <%= f.button :submit, "Set my password" %>
    </div>
  </fieldset>
<% end %>