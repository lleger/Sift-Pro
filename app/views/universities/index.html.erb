<h1>Universities</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.id %></td>
        <td><%= link_to university.name, university_path(university) %></td>
        <td><%= university.location %></td>
        <td>
          <%= link_to 'Edit', edit_university_path(university), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', university_path(university), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_university_path, :class => 'btn btn-primary' %>
