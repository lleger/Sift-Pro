<h1>Athletes</h1>

<ul class="nav nav-pills">
  <li<%= " class='active'" if current_page?(filter: "all") || params[:filter].nil? %>>
      <a href="?filter=all">All</a>
  </li>
  <% @sports.each do |sport| %>
  <li<%= " class='active'" if current_page?(filter: sport.name.downcase) %>>
    <a href="?filter=<%= sport.name.downcase %>"><%= sport.name.capitalize %></a>
  </li>  
  <% end %>
</ul>

<% if @athletes.present? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= link_to athlete.name, athlete_path(athlete) %></td>
        <td><%= athlete.sport.name %></td>
        <td>
          <%= link_to 'Authorize', authorize_athlete_path(athlete), :class => 'btn btn-mini btn-primary' %>
          <%= link_to 'Edit', edit_athlete_path(athlete), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', athlete_path(athlete), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<div class="row" id="empty_content_page">
  <div class="span12 well">
    <h1>No athletes created.</h1>
    <p>You haven't added any athletes yet. <%= link_to "Add one now.", new_athlete_path %></p>
  </div>
</div>

<% end %>

<%= link_to 'New', new_athlete_path, :class => 'btn btn-primary' %>