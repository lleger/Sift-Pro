<%= simple_form_for @athlete, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Athlete</legend>

    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.association :sport %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', athletes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
